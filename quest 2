<body>
    <div class="container">
        <header>
            <h1>Конвертер систем счисления</h1>
            <p>Введите число в десятичной системе для конвертации</p>
        </header>

        <main>
            <div class="converter-card">
                <div class="input-section">
                    <label for="numberInput">Десятичное число:</label>
                    <input type="text" id="numberInput" placeholder="Введите целое число">
                    <button id="convertBtn">Конвертировать</button>
                    <div id="errorMessage" class="error-message"></div>
                </div>

                <div class="results-section">
                    <div class="result-row">
                        <span class="system-name">Двоичная:</span>
                        <span id="binaryResult" class="result-value">-</span>
                    </div>
                    <div class="result-row">
                        <span class="system-name">Восьмеричная:</span>
                        <span id="octalResult" class="result-value">-</span>
                    </div>
                    <div class="result-row">
                        <span class="system-name">Шестнадцатеричная:</span>
                        <span id="hexResult" class="result-value">-</span>
                    </div>
                </div>

                <div class="status-section">
                    <div id="connectionStatus" class="status-connected">
                        ✓ Клиентская часть готова к работе
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        class NumberConverter {
            constructor() {
                this.initializeElements();
                this.setupEventListeners();
                this.updateStatus('ready');
            }

            initializeElements() {
                this.numberInput = document.getElementById('numberInput');
                this.convertBtn = document.getElementById('convertBtn');
                this.errorMessage = document.getElementById('errorMessage');
                this.binaryResult = document.getElementById('binaryResult');
                this.octalResult = document.getElementById('octalResult');
                this.hexResult = document.getElementById('hexResult');
                this.connectionStatus = document.getElementById('connectionStatus');
            }

            setupEventListeners() {
                this.convertBtn.addEventListener('click', () => this.convertNumber());
                this.numberInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.convertNumber();
                    }
                });
            }

            convertNumber() {
                const number = this.numberInput.value.trim();
                
                // Валидация ввода
                if (!number) {
                    this.showError('Введите число');
                    return;
                }

                if (!/^-?\d+$/.test(number)) {
                    this.showError('Введите целое число');
                    return;
                }

                this.clearError();
                this.setLoading(true);
                this.updateStatus('converting');

                // Имитация задержки сервера
                setTimeout(() => {
                    try {
                        const result = this.performConversion(number);
                        this.displayResults(result);
                        this.updateStatus('success');
                    } catch (error) {
                        this.showError(error.message);
                        this.clearResults();
                        this.updateStatus('error');
                    } finally {
                        this.setLoading(false);
                    }
                }, 500);
            }

            performConversion(decimalNum) {
                const num = parseInt(decimalNum);
                
                if (isNaN(num)) {
                    throw new Error('Введите корректное целое число');
                }

                // Проверка на переполнение
                if (num > Number.MAX_SAFE_INTEGER || num < Number.MIN_SAFE_INTEGER) {
                    throw new Error('Число слишком большое для конвертации');
                }

                return {
                    decimal: num,
                    binary: this.toBinary(num),
                    octal: this.toOctal(num),
                    hexadecimal: this.toHexadecimal(num)
                };
            }

            toBinary(num) {
                if (num === 0) return '0';
                if (num < 0) return '-' + this.toBinary(-num);
                return num.toString(2);
            }

            toOctal(num) {
                if (num === 0) return '0';
                if (num < 0) return '-' + this.toOctal(-num);
                return num.toString(8);
            }

            toHexadecimal(num) {
                if (num === 0) return '0';
                if (num < 0) return '-' + this.toHexadecimal(-num);
                return num.toString(16).toUpperCase();
            }

            displayResults(data) {
                this.binaryResult.textContent = data.binary;
                this.octalResult.textContent = data.octal;
                this.hexResult.textContent = data.hexadecimal;
            }

            clearResults() {
                this.binaryResult.textContent = '-';
                this.octalResult.textContent = '-';
                this.hexResult.textContent = '-';
            }

            showError(message) {
                this.errorMessage.textContent = message;
            }

            clearError() {
                this.errorMessage.textContent = '';
            }

            setLoading(loading) {
                if (loading) {
                    this.convertBtn.disabled = true;
                    this.convertBtn.textContent = 'Конвертация...';
                    this.convertBtn.classList.add('loading');
                } else {
                    this.convertBtn.disabled = false;
                    this.convertBtn.textContent = 'Конвертировать';
                    this.convertBtn.classList.remove('loading');
                }
            }

            updateStatus(status) {
                const statusMessages = {
                    ready: '✓ Клиентская часть готова к работе',
                    converting: '⏳ Выполняется конвертация...',
                    success: '✓ Конвертация выполнена успешно',
                    error: '✗ Ошибка при конвертации'
                };

                const statusClasses = {
                    ready: 'status-connected',
                    converting: 'status-connected',
                    success: 'status-connected',
                    error: 'status-disconnected'
                };

                this.connectionStatus.textContent = statusMessages[status] || statusMessages.ready;
                this.connectionStatus.className = statusClasses[status] || statusClasses.ready;
            }
        }

        // Инициализация приложения после загрузки DOM
        document.addEventListener('DOMContentLoaded', () => {
            new NumberConverter();
        });

        // Демонстрация работы при загрузке
        window.addEventListener('load', () => {
            setTimeout(() => {
                const converter = new NumberConverter();
                converter.numberInput.value = '255';
                converter.convertNumber();
            }, 1000);
        });
    </script>
</body>
</html>
